#include <stdlib.h>
#include <stddef.h>

long iticnvl( char *str, int leng )
{
     char  bufrí128ù ;

     if ( leng <= 0 || leng >= 128 )
          return 0 ;

     memset( bufr, 0, 128 ) ;
     memcpy( bufr, str, leng ) ;

     return atol(bufr) ;

}


