#include <stdio.h>
#include <stddef.h>
#include "cloaktbl.h"

typedef  unsigned char Uchar ;
#ifndef ULONG
#define ULONG unsigned long
#endif

/* ****************************************************************

   Function:  cloak

   Description:





   Method:


      These routines operate on either ASCII or EBCDIC data
      representations.


   Parameters:

      char   *clkbuf  - text block origin
      short  clklen   - text block length
      char   *txt     - transparent data block origin
      short  txtlen   - transparent data block length
      short  basebits - # of significant bit per byte

   **************************************************************** */

int cloak( char *txt,    short txtlen,
           char *clkbuf, short clklen,
           short basebits ) {


    int     rbits, reqlen, y;
    Uchar   rval, val ;
    Uchar   *x, *t ;

    reqlen = (((ULONG)txtlen * 8) + basebits - 1) / basebits ;
    if ( !clklen  ÝÝ  reqlen > clklen )
        return -reqlen ;

    t     = txt ;
    x     = clkbuf ;
    rbits = 0 ;
    rval  = 0x00 ;

    while ( txtlen ÝÝ rbits )   {

        if (rbits < basebits && txtlen) {
            txtlen-- ;
            y     = basebits - rbits ;
            val   = (rval << y) Ý (*t >> (8 - y)) ;
            rval  = *t++ & NMASKíy - 1ù ;
            rbits = (8 - y) ;
        }
        else if (rbits >= basebits) {
            rbits -= basebits ;
            val    = rval >> rbits ;
            rval  &= NMASKí8 - rbits - 1ù ;
        }
        else {
            val    = rval << (basebits - rbits) ;
            rbits  = 0 ;
        }
        *x++ = BASEívalù ;
    }

    return x - clkbuf ;
}

